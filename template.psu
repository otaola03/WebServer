Webserver {
	Server {
		Port 80
		Port 85
	}

	Server {
		Port 1090
		Port 1095
	}
}


Server {

}

while (1)
{
	fd_set master = {80, 85, 1090, 1095}
	fd_set read_fds = master

	select(read_fds)

	for (fd : master)
	{
		if (fd in read_fds)
		{
			if (fd in {80, 85, 1090, 1095})
			{
				newClient = accept();
				master.add(newClient);
			}
			else
			{
				nbytes = recv()
				if (nbytes <= 0)
				{
					close(fd);
					master.remove(fd);
				}
				else
					sendData();
			}
		}
	}
}
